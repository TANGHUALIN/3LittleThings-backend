<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         id="WebApp_ID" version="4.0">

    <servlet>
        <servlet-name>SignupServlet</servlet-name>
        <servlet-class>SignUpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>LogInServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DiaryDisplayServlet</servlet-name>
        <servlet-class>DiaryDisplayServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DiaryDisplayServlet</servlet-name>
        <url-pattern>/displayDiary</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DiaryProcessServlet</servlet-name>
        <servlet-class>DiaryProcessServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DiaryProcessServlet</servlet-name>
        <url-pattern>/addDiary</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateFavoriteServlet</servlet-name>
        <servlet-class>UpdateFavoriteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateFavoriteServlet</servlet-name>
        <url-pattern>/updateFavorite</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteDiaryServlet</servlet-name>
        <servlet-class>DeleteDiaryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteDiaryServlet</servlet-name>
        <url-pattern>/deleteDiary</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateEntryServlet</servlet-name>
        <servlet-class>UpdateEntryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateEntryServlet</servlet-name>
        <url-pattern>/updateDiaryEntry</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteEntryServlet</servlet-name>
        <servlet-class>DeleteEntryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteEntryServlet</servlet-name>
        <url-pattern>/deleteDiaryEntry</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FindPasswordServlet</servlet-name>
        <servlet-class>FindPasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FindPasswordServlet</servlet-name>
        <url-pattern>/findPassword</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <servlet-class>ChangePasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <url-pattern>/changePassword</url-pattern>
    </servlet-mapping>
</web-app>